<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.labrace.torontoso"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_robotics"
        android:label="Torontoso"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.labrace.torontoso.activity.SplashActivity"
            android:label="Torontoso"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.labrace.torontoso.activity.MainNavActivity"
            android:label="@string/title_activity_patient_list"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name="com.labrace.torontoso.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">
        </activity>
    </application>

</manifest>
