<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/autumn_app_name</item>
        <item name="colorPrimaryDark">@color/autumn_app_name</item>
        <item name="colorAccent">@color/autumn_pumpkin_name</item>
        <item name="popupMenuStyle">@style/MyPopupMenu</item>
        <item name="android:statusBarColor">@color/autumn_app_name</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/autumn_app_name</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@color/autumn_app_name</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/autumn_app_name</item>
    </style>

    <style name="MyPopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:textColor">@color/autumn_app_name</item>
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/autumn_app_name</item>
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/autumn_app_name</item>
    </style>

</resources>
